@model DelControlWeb.Models.Product
@{
    ViewBag.Title = "Информация о товаре";
}

<p>
    @Html.ActionLink("Назад к списку", "Index")
</p>
<div class="form-horizontal">
    @Html.HiddenFor(model => model.CompanyId)

    <div class="form-group">
        @Html.Label("Название", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <p class="form-control-static">@Model.Name</p>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Описание", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <p class="form-control-static">@Model.Descriotion</p>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Цена", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <p class="form-control-static">@Model.Price</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-3">
            <a href="/Products/Edit/@Model.Id" class="btn btn-block btn-default">Редактировать</a>
        </div>
    </div>
</div>