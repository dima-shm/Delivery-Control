@model DelControlWeb.ViewModels.Order.DetailsViewModel
@{
    ViewBag.Title = "Информация о закзазе";
}

<p>
    @Html.ActionLink("Назад к списку", "Index")
</p>
<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Заказчик", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <a href="/Customers/Details/@Model.CustomerId" class="form-control-static">@Model.CustomerName</a>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Адрес доставик", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <a href="/Deliveries/Details/@Model.DeliveryId" class="form-control-static">@Model.Delivery</a>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("ID курьера", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <a href="/User/Details/@Model.CourierId" class="form-control-static">@Model.CourierId</a>
        </div>
    </div>

    <div>
        @Html.Label("Список продуктов", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Цена</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Descriotion</td>
                        <td>@item.Price</td>
                        <td>
                            <a href="/Products/Details/@item.Id" class="glyphicon glyphicon-eye-open" style="text-decoration: none" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Статус заказа", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-7">
            <p class="form-control-static">@Model.Status</p>
        </div>
    </div>
</div>