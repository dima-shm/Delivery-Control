<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Учет потребности СИЗ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="@Url.Content("~/favicon.ico")">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background-color:rgb(0,158,237); border-color:white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color:white;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("О приложении", "About", "Home", null, new { style = "color:white" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container"
             style="padding: 0 20px 20px 20px;
             background-color: rgb(255,255,255);
             box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
             border-radius:5px;
             min-height:800px">
            <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
                <div class="col-md-12">
                    <h2 style="color:white;">@ViewData["Title"]</h2>
                </div>
            </div>
            <br />
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>Copyright &copy; @DateTime.Now.Year Шуманский Д.А.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>