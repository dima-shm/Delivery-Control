@model IEnumerable<DelControlWeb.Models.User>
@{
    ViewBag.Title = "Управление менеджерами";
}

<p>
    @Html.ActionLink("Добавить менеджера", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>Имя</th>
        <th>Номер телефона</th>
        <th>Адрес</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr onclick="window.location.href='/ManagerAccounts/Details/@item.Id'">
            <td>@item.UserName</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>
                <a href="/ManagerAccounts/Delete/@item.Id" class="glyphicon glyphicon-trash" style="color: red; text-decoration: none" />
            </td>
        </tr>
    }
</table>