@model IEnumerable<DelControlWeb.Models.Product>
@{
    ViewBag.Title = "Товары";
}

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Descriotion</td>
            <td>@item.Price</td>
            <td>
                <a href="/Products/Edit/@item.Id" class="glyphicon glyphicon-pencil" style="text-decoration: none" />
                <a href="/Products/Details/@item.Id" class="glyphicon glyphicon-eye-open" style="text-decoration: none" />
                <a href="/Products/Delete/@item.Id" class="glyphicon glyphicon-trash" style="text-decoration: none" />
            </td>
        </tr>
    }
</table>