@model IEnumerable<DelControlWeb.Models.User>
@{
    ViewBag.Title = "Управление курьерами";
}

<table class="table table-striped table-hover">
    <tr>
        <th>ID компании</th>
        <th>Имя пользователя</th>
        <th>Номер телефона</th>
        <th>Адрес</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/CompanyAccounts/Details/@item.CompanyId">@item.CompanyId</a>
            </td>
            <td>@item.UserName</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>
                <a href="/Couriers/SelectOrder?companyId=@item.CompanyId&courierId=@item.Id" style="color: green;">Назначить заказ</a>
            </td>
        </tr>
    }
</table>