@model IEnumerable<DelControlWeb.Models.Customer>
@{
    ViewBag.Title = "Управление заказчиками";
}

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>Имя</th>
        <th>Номер телефона</th>
        <th>Адресс</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>
                <a href="/Customers/Edit/@item.Id" class="glyphicon glyphicon-pencil" style="text-decoration: none" />
                <a href="/Customers/Details/@item.Id" class="glyphicon glyphicon-eye-open" style="text-decoration: none" />
                <a href="/Customers/Delete/@item.Id" class="glyphicon glyphicon-trash" style="text-decoration: none" />
            </td>
        </tr>
    }
</table>