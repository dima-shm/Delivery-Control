@model IEnumerable<DelControlWeb.Models.Order>
@{
    ViewBag.Title = "Управление заказами";
}

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Заказчик</th>
        <th>Адрес доставки</th>
        <th>Курьер</th>
        <th>Товары в заказе</th>
        <th>Статус заказа</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td><a href="/Customers/Details/@item.CustomerId">@item.CustomerId</a></td>
        <td><a href="/Deliveries/Details/@item.DeliveryId">@item.DeliveryId</a></td>
        <td>@item.CourierId</td>
        <td><a href="/Orders/ProductsDetails/@item.Id">просмотреть</a></td>
        <td>@item.Status</td>
        <td>
            <a href="/Orders/Edit/@item.Id" class="glyphicon glyphicon-pencil" style="text-decoration: none" />
            <a href="/Orders/Details/@item.Id" class="glyphicon glyphicon-eye-open" style="text-decoration: none" />
            <a href="/Orders/Delete/@item.Id" class="glyphicon glyphicon-trash" style="text-decoration: none" />
        </td>
    </tr>
    }
</table>