@model IEnumerable<DelControlWeb.Models.Order>
@{
    ViewBag.Title = "Заказы";
}

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Заказчик</th>
        <th>Адрес доставки</th>
        <th>Курьер</th>
        <th>Статус заказа</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><a href="/Customers/Details/@item.CustomerId">@item.CustomerId</a></td>
            <td><a href="/Delivery/Details/@item.DeliveryId">@item.DeliveryId</a></td>
            <td>@item.CourierId</td>
            <td>@item.Status</td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>