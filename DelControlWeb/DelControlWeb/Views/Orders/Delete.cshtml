@model DelControlWeb.ViewModels.Order.OrderViewModel
@{
    ViewBag.Title = "Удаление заказа";
}

<p>
    @Html.ActionLink("Назад к списку", "Index")
</p>
<h3>Вы уверены, что хотите удалить данный заказ?</h3>
<div class="form-horizontal">
    <div class="col-md-5">
        <div class="form-group">
            @Html.Label("Имя заказчика", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <p class="form-control-static">@Model.CustomerName</p>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Адрес доставик", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <p class="form-control-static">@Model.DeliveryAddress</p>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Дата и время доставки", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <p class="form-control-static">@Model.DeliveryDate.ToString("d"), @Model.DeliveryTime.ToString("t")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Комментарий к заказу", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <p class="form-control-static">@Model.Comment</p>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="form-group">
            @Html.Label("Товары в заказе", htmlAttributes: new { @class = "control-label col-md-5" })
            <table class="table table-striped table-hover" id="table_products">
                <thead>
                    <tr>
                        <th>Имя товара</th>
                        <th>Описание</th>
                        <th>Цена</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderProducts)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="form-actions no-color col-md-offset-5 col-md-5">
                <input type="submit" value="Удалить" class="btn btn-block btn-danger" />
            </div>
        </div>
    }
</div>